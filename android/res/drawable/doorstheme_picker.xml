<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/innerColor" />
            <stroke android:width="4px" android:color="?attr/frameColor" />
        </shape>
    </item>
    <item
        android:gravity="center"
        android:height="52dp"
        android:right="4px"
        android:left="4px">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorAccent" />
        </shape>
    </item>
</layer-list>