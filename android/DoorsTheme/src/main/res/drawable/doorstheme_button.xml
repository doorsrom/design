<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <inset
            android:insetTop="6dp"
            android:insetBottom="6dp">
            <shape android:shape="rectangle">
                <solid android:color="?attr/elementColor"/>
                <stroke android:width="4px" android:color="?attr/secondFrameColor" />
                <padding android:top="4dp"
                    android:left="20dp"
                    android:bottom="4dp"
                    android:right="20dp"/>
            </shape>
        </inset>
    </item>
    <item>
        <inset
            android:insetTop="6dp"
            android:insetBottom="6dp">
            <shape android:shape="rectangle">
                <solid android:color="?attr/elementColor"/>
                <padding android:top="4dp"
                    android:left="20dp"
                    android:bottom="4dp"
                    android:right="20dp"/>
            </shape>
        </inset>
    </item>
</selector>