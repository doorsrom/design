<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
            android:insetTop="6dp"
            android:insetBottom="6dp">
            <shape android:shape="rectangle">
                <size android:height="20dp" android:width="20dp"/>
                <stroke android:width="4px" android:color="?attr/colorAccent" />
                <solid android:color="@color/DoorsTheme.white" />
                <padding
                    android:top="6dp"
                    android:bottom="6dp"
                    android:left="6dp"
                    android:right="6dp"/>
            </shape>
        </inset>
    </item>
    <item>
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
            android:insetTop="6dp"
            android:insetBottom="6dp">
            <shape android:shape="rectangle">
                <size android:height="20dp" android:width="20dp"/>
                <stroke android:width="4px" android:color="?attr/frameColor" />
                <padding
                    android:top="6dp"
                    android:bottom="6dp"
                    android:left="6dp"
                    android:right="6dp"/>
            </shape>
        </inset>
    </item>
</selector>